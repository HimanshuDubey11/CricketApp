<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8b8a8a"
    android:layout_marginBottom="10dp"
    tools:context=".PlayerAdapter">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/playerlinearlayout"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/batsman"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#06199b"
            android:text="Batsman"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/runs"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#06199b"
            android:text="Runs"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/balls"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="#06199b"
            android:text="Balls"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/dismissal"
        android:layout_below="@id/playerlinearlayout"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#b60a00"
        android:text="Dissmissal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>